---
import { Image } from "astro:assets";
const { url, title, maxHeight = "auto" } = Astro.props;
---

<figure>
  <Image src={url} alt={title} />
  <figcaption>{title}</figcaption>
</figure>

<style define:vars={{ maxHeight }}>
  figure {
    margin: 0 0 var(--babase);
  }
  img {
    display: block;
    margin-inline: auto;
    object-fit: contain;
    max-width: 100%;
    width: 100%;
    max-height: var(--maxHeight);
  }
  figcaption {
    text-align: center;
    text-wrap: balance;
    margin: 0 auto;
  }
</style>
