---
import Responsive from "./Responsive.astro";
interface Props {
  headings: { depth: number; slug: string; text: string }[];
  title: string;
}
const { headings, title } = Astro.props;
---

{
  headings && headings.length > 0 && (
    <nav>
      <Responsive>
        <div class="toc">
          <p>{title}</p>
          {headings.map((heading) => (
            <a class={`h${heading.depth}`} href={`#${heading.slug}`}>
              {heading.text}
            </a>
          ))}
        </div>
      </Responsive>
    </nav>
  )
}

<style>
  nav {
    background-color: var(--back);
  }
  .toc {
    display: flex;
    flex-direction: column;
    gap: var(--base);
  }
  nav p {
    margin: 0;
  }
  nav .h2 {
    padding-left: 0.5rem;
  }
  nav .h3 {
    padding-left: 1rem;
  }
  nav .h4 {
    padding-left: 1.5rem;
  }
  nav .h5 {
    padding-left: 2rem;
  }
  nav .h6 {
    padding-left: 2.5rem;
  }
  @media (prefers-color-scheme: dark) {
    nav a {
      color: var(--text);
    }
  }
</style>
