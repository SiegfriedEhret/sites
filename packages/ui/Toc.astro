---
import Responsive from "./Responsive.astro";
const { headings } = Astro.props;
---

{
  headings && headings.length > 0 && (
    <nav>
      <Responsive>
        <div class="toc">
          <p>Table of contents</p>
          {headings.map((heading) => (
            <a
              class:list={{
                h2: heading.level === "h2" || heading.depth === 2,
                h3: heading.level === "h3" || heading.depth === 3,
                h4: heading.level === "h4" || heading.depth === 4,
                h5: heading.level === "h5" || heading.depth === 5,
                h6: heading.level === "h6" || heading.depth === 6,
              }}
              href={`#${heading.id || heading.slug}`}
            >
              {heading.title || heading.text}
            </a>
          ))}
        </div>
      </Responsive>
    </nav>
  )
}

<style>
  nav {
    background-color: var(--back);
  }
  .toc {
    display: flex;
    flex-direction: column;
    gap: var(--base);
  }
  nav p {
    margin: 0;
  }
  nav .h2 {
    padding-left: 0.5rem;
  }
  nav .h3 {
    padding-left: 1rem;
  }
  nav .h4 {
    padding-left: 1.5rem;
  }
  nav .h5 {
    padding-left: 2rem;
  }
  nav .h6 {
    padding-left: 2.5rem;
  }
  @media (prefers-color-scheme: dark) {
    nav a {
      color: var(--text);
    }
  }
</style>
