---
import Sieg from "./Sieg.astro";
---

<footer>
  <slot />

  <nav>
    <slot name="link" />
  </nav>

  <a href="/" class="sieg">
    <Sieg small={true} />
  </a>
</footer>

<style>
  footer {
    border-block-start: 1px solid var(--baback);
    text-align: center;
    margin-block-start: var(--babase);
    padding-block: var(--babase);
  }

  nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 16px;
  }

  .sieg {
    transform: rotateZ(0);
    transition: transform 0.3s;
    will-change: transform;

    :is(:active, :focus, :hover) {
      transform: rotate3d(1, 1, 1, 10deg);
    }
  }

  @media screen and (min-width: 34rem) {
    nav {
      flex-direction: row;
    }
  }
</style>
