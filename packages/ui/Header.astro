---
import logo from "./sieg.jpg";
---

<header>
  <nav>
    <div class="links">
      <slot name="links1" />
    </div>
    <div class="logo">
      <a href="/"><img src={logo.src} alt="Kabuki Siegfried" /></a>
    </div>
    <div class="links">
      <slot name="links2" />
    </div>
  </nav>
</header>

<style>
  header {
    justify-content: space-between;
    gap: var(--babase);
    padding: var(--babase);
  }

  .logo {
    display: flex;
    justify-content: center;
  }
  .logo img {
    border: 4px solid var(--lake-red);
    border-radius: 50%;
    max-width: calc(3*var(--babase));
    max-height: calc(3*var(--babase));
    aspect-ratio: 1 / 1;
    will-change: transform;
    transition: transform 0.3s;
  }
  .logo a {
    border-bottom: 0;
  }
  .logo a:is(:active, :focus, :hover) img {
    transform: rotate3d(1, 1, 1, 15deg);
  }

  nav {
    display: grid;
    grid-template-columns: 1fr calc(4*var(--babase)) 1fr;
    align-items: center;
    gap: var(--base);

    a {
      text-decoration: none;
    }
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--base);

    &:first-child {
      justify-content: flex-end;
    }
    &:last-child {
      justify-content: flex-start;
    }
  }

</style>
