---
import logo from "./sieg.jpg";
---

<header>
  <div class="logo">
    <a href="/"><img src={logo.src} alt="Kabuki Siegfried" /></a>
  </div>

  <nav>
    <slot name="title" />
    <slot name="links" />
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    gap: var(--babase);
    padding: var(--babase);
  }

  .logo img {
    border: 4px solid var(--lake-red);
    border-radius: 50%;
    max-width: 80px;
    max-height: 80px;
    aspect-ratio: 1 / 1;
    will-change: transform;
    transition: transform 0.3s;
  }
  .logo a:is(:active, :focus, :hover) img {
    transform: rotate3d(1, 1, 1, 15deg);
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    gap: var(--base);
  }

  @media screen and (min-width: 47rem) {
    header {
      flex-direction: column;
      position: sticky;
      top: 0;
    }
    nav {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  @media screen and (min-width: 68rem) {
    header {
      padding-top: var(--babase);
    }
  }
</style>
