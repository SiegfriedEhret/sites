{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".vercel_build_output/**",
        "dist/**"
      ],
      "inputs": [
        "apps/src/**/*.{html,js,ts,astro}",
        "packages/**/*.{html,js,ts,astro}"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
