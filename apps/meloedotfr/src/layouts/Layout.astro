---
import Layout from "@packages/ui/Layout.astro";
import Header from "@packages/ui/Header.astro";
const { title, description, metaImage } = Astro.props;

import "../styles.css";
---

<Layout title={title} description={description} metaImage={metaImage}>
  <Header slot="header">
    <a slot="title" class="link" href="/">meloe.fr</a>
    <Fragment slot="links">
      <a class="link" href="/fichiers">/fichiers</a>
      <a class="link" href="/a-propos">/a-propos</a>
    </Fragment>
  </Header>

  <Fragment slot="main">
    <slot />

    <script
      data-goatcounter="https://meloedotfr.goatcounter.com/count"
      async
      src="/analytics.js"></script>
  </Fragment>
</Layout>
