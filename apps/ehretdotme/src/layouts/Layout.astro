---
import Layout from "@packages/ui/Layout.astro";
import Header from "@packages/ui/Header.astro";
import Footer from "@packages/ui/Footer.astro";
import Vouivre from "@packages/ui/Vouivre.astro";
const {
  title,
  description = "My name is Siegfried Ehret. I am a developer.",
  metaImage,
} = Astro.props;

import "../styles.css";
---

<Layout
  title={title}
  description={description}
  metaImage={metaImage}
  name="ehret.me"
  rssTitle="ehret.me"
  rssHref="/rss.xml"
>
  <Fragment slot="first">
    <slot name="first" />
  </Fragment>

  <Header slot="header">
    <Fragment slot="links1">
      <a class="link" href="/">/</a>
      <a class="link" href="/nflm">/nflm</a>
      <a class="link" href="/notes">/notes</a>
      <a class="link" href="/museum">/museum</a>
      <a class="link" href="/salary">/salary</a>
    </Fragment>
    <Fragment slot="links2">
      <a class="link" href="/rss.xml">📫 RSS</a>
      <a class="link" href="https://sieg.fr/ied" title="My French website">
        🇫🇷 sieg.fr/ied
      </a>
      <a
        class="link"
        href="https://mastodon.ehret.me/@SiegfriedEhret"
        rel="me"
        title="🐘 mastodon"
      >
        🐘 mastodon
      </a>
    </Fragment>
  </Header>

  <Fragment slot="main">
    <slot />
  </Fragment>

  <Footer slot="footer">
    <Vouivre
      domain="ehret.me"
      textPrevious="Previous"
      textNext="Next"
      textRandom="Random"
    />
    <p>I think you are awesome. Peace.</p>
    <p>
      Made with 💖 and <a href="https://github.com/SiegfriedEhret/sites">⌨️</a>.

      <a href="https://ehretdotme.goatcounter.com/">Stats</a>.
    </p>
    <script
      data-goatcounter="https://ehretdotme.goatcounter.com/count"
      async
      src="/analytics.js"></script>
  </Footer>
</Layout>
