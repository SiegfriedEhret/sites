---
import Layout from "@packages/ui/Layout.astro";
import Header from "@packages/ui/Header.astro";
import Footer from "@packages/ui/Footer.astro";
const {
  title,
  description = "Je m'appelle Siegfried. Je suis développeur.",
  metaImage,
} = Astro.props;

import "../styles.css";
---

<Layout
  title={title}
  description={description}
  metaImage={metaImage}
  rssTitle="sieg.fr/ied"
  rssHref="/ied/rss.xml"
>
  <Header slot="header">
    <a slot="title" class="link" href="/ied">sieg.fr/ied</a>
    <Fragment slot="links">
      <a class="link" href="/ied/notes">/notes</a>
      <a class="link" href="/ied/causeries">/causeries</a>
    </Fragment>
  </Header>

  <main slot="main">
    <slot />
  </main>

  <Footer slot="footer">
    <a slot="rss" class="link" href="/ied/rss.xml">📫 RSS</a>
    <a
      slot="link"
      class="link"
      href="https://ehret.me/"
      title="Mon site en anglais"
    >
      🔗 ehret.me
    </a>

    <p>Vous êtes chouettes. Bisous.</p>
    <p>
      Bidouillé avec 💖 et <a href="https://github.com/SiegfriedEhret/sites"
        >⌨️</a
      >. <a href="https://siegdotfr.goatcounter.com/">Stats</a>.
    </p>
    <script
      data-goatcounter="https://siegdotfr.goatcounter.com"
      async
      src="/analytics.js"></script>
  </Footer>
</Layout>

<style>
  main {
    max-width: 72ch;
    margin: 0 auto;
  }
</style>
